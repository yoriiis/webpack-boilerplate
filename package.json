{
	"name": "webpack-boilerplate",
	"version": "2.0.0",
	"description": "Boilerplate to kickstart creating a project with Webpack configuration",
	"homepage": "https://github.com/yoriiis/webpack-boilerplate",
	"bugs": "https://github.com/yoriiis/webpack-boilerplate/issues",
	"repository": "https://github.com/yoriiis/webpack-boilerplate.git",
	"license": "MIT",
	"author": "Yoriiis",
	"type": "module",
	"scripts": {
		"biome:check": "biome check",
		"biome:fix": "biome check --write",
		"build": "rm -rf ./web/dist/ && webpack --mode=production --config config/webpack.config.js",
		"dev": "rm -rf ./web/dist/ && webpack --mode=development --config config/webpack.config.js",
		"dev:unit": "jest --config config/jest.config.js --watchAll --coverage",
		"inspect": "node --inspect node_modules/webpack/bin/webpack.js --config webpack.config.js --mode=development",
		"test": "npm run test:unit",
		"test:unit": "jest --config config/jest.config.js"
	},
	"prettier": "./config/prettier.config.cjs",
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/preset-env": "^7.28.5",
		"@babel/preset-react": "^7.28.5",
		"@biomejs/biome": "^2.3.4",
		"babel-jest": "^30.2.0",
		"babel-loader": "^10.0.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"chunks-webpack-plugin": "^13.0.0",
		"css-loader": "^7.1.2",
		"css-minimizer-webpack-plugin": "^7.0.2",
		"eslint-plugin-react": "^7.37.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jsx-dom": "^8.1.6",
		"mini-css-extract-plugin": "^2.9.4",
		"postcss": "^8.5.6",
		"postcss-custom-media": "^11.0.6",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^16.1.1",
		"postcss-loader": "^8.2.0",
		"postcss-nested": "^7.0.2",
		"postcss-preset-env": "^10.4.0",
		"postcss-url": "^10.1.3",
		"svg-chunk-webpack-plugin": "^7.0.0",
		"terser-webpack-plugin": "^5.3.14",
		"webpack": "^5.103.0",
		"webpack-cli": "^6.0.1",
		"webpack-manifest-plugin": "^6.0.1"
	}
}
