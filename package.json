{
	"name": "webpack-boilerplate",
	"version": "2.0.0",
	"description": "Boilerplate to kickstart creating a project with Webpack configuration",
	"homepage": "https://github.com/yoriiis/webpack-boilerplate",
	"bugs": "https://github.com/yoriiis/webpack-boilerplate/issues",
	"repository": "https://github.com/yoriiis/webpack-boilerplate.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"scripts": {
		"build": "rm -rf ./web/dist/ && webpack --mode=production --config config/webpack.config.js",
		"inspect": "node --inspect node_modules/webpack/bin/webpack.js --config webpack.config.js --mode=development",
		"start": "rm -rf ./web/dist/ && webpack --mode=development --config config/webpack.config.js",
		"test": "jest",
		"test:coverage": "jest --config config/jest.config.js --coverage",
		"test:eslint": "eslint . --config config/.eslintrc.js --ignore-pattern dist",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:stylelint": "stylelint './src/**/*.css' --config ./config/stylelint.config.js",
		"test:watch": "jest --config config/jest.config.js --watchAll --coverage"
	},
	"prettier": "./config/prettier.config.js",
	"devDependencies": {
		"@babel/core": "^7.21.8",
		"@babel/eslint-parser": "^7.21.8",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-react-jsx": "^7.21.5",
		"@babel/preset-env": "^7.21.5",
		"babel-jest": "^29.5.0",
		"babel-loader": "^9.1.2",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"chunks-webpack-plugin": "^7.1.0",
		"css-loader": "^6.7.3",
		"css-minimizer-webpack-plugin": "^5.0.0",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jsx-dom": "^8.0.5",
		"markdownlint-cli": "^0.34.0",
		"mini-css-extract-plugin": "^2.7.5",
		"postcss": "^8.4.23",
		"postcss-custom-media": "^9.1.3",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^15.1.0",
		"postcss-loader": "^7.3.0",
		"postcss-nested": "^6.0.1",
		"postcss-preset-env": "^8.3.2",
		"postcss-url": "^10.1.3",
		"prettier": "^2.8.7",
		"stylelint": "^14.10.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-standard": "^27.0.0",
		"stylelint-prettier": "^2.0.0",
		"svg-chunk-webpack-plugin": "^4.0.0",
		"terser-webpack-plugin": "^5.3.7",
		"webpack": "^5.81.0",
		"webpack-cli": "^5.0.2",
		"webpack-manifest-plugin": "^5.0.0"
	},
	"engines": {
		"node": ">=12.14.0"
	}
}
