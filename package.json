{
	"name": "webpack-boilerplate",
	"version": "2.0.0",
	"description": "Boilerplate to kickstart creating a project with Webpack configuration",
	"homepage": "https://github.com/yoriiis/webpack-boilerplate",
	"bugs": "https://github.com/yoriiis/webpack-boilerplate/issues",
	"repository": "https://github.com/yoriiis/webpack-boilerplate.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"scripts": {
		"build": "rm -rf ./web/dist/ && webpack --mode=production --config=webpack.config.js",
		"inspect": "node --inspect node_modules/webpack/bin/webpack.js --config webpack.config.js --mode=development",
		"start": "rm -rf ./web/dist/ && webpack --mode=development --config=webpack.config.js",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:eslint": "eslint . --ignore-pattern dist",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:stylelint": "stylelint './src/**/*.css'",
		"test:watch": "jest --watchAll --coverage"
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.12.17",
		"@babel/plugin-proposal-class-properties": "^7.12.13",
		"@babel/plugin-transform-react-jsx": "^7.12.17",
		"@babel/preset-env": "^7.12.17",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"chunks-webpack-plugin": "^7.0.1",
		"css-loader": "^5.0.2",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"eslint": "^7.20.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-standard": "^5.0.0",
		"jest": "^26.6.3",
		"jsx-dom": "^7.0.0-beta.1",
		"markdownlint-cli": "^0.26.0",
		"mini-css-extract-plugin": "^1.3.8",
		"postcss": "^8.2.6",
		"postcss-custom-media": "^8.0.0",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^14.0.0",
		"postcss-loader": "^5.0.0",
		"postcss-nested": "^5.0.3",
		"postcss-preset-env": "^6.7.0",
		"postcss-url": "^10.1.1",
		"prettier-eslint": "^12.0.0",
		"prettier-stylelint": "^0.4.2",
		"progress-bar-webpack-plugin": "^2.1.0",
		"stylelint": "^13.10.0",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-prettier": "^1.1.2",
		"svg-chunk-webpack-plugin": "^2.0.1",
		"terser-webpack-plugin": "^5.1.1",
		"webpack": "^5.23.0",
		"webpack-cli": "^4.5.0",
		"webpack-manifest-plugin": "^3.0.0"
	},
	"engines": {
		"node": ">=12.14.0"
	}
}
