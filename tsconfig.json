{
	"compilerOptions": {
		"outDir": "./web/types/",
		"allowJs": true,
		"sourceMap": false,
		"checkJs": true,
		"module": "es6",
		"target": "es5",
		"lib": ["dom", "esnext"],
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"types": ["node"],
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/**/__tests__", "./src/**/__mocks__"]
}
